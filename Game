                <div class="stat-icon"><i class="fas fa-fingerprint"></i></div>
                <span id="confidence-display">Reputation: 100%</span>
            </div>
        </div>

        <div id="interact-prompt">PRESS 'E' TO DISCUSS</div>

        <!-- Premium Dialogue UI -->
        <div id="dialogue-box" class="glass">
            <div class="chat-header">
                <div class="chat-user">
                    <div class="avatar-box" id="chat-avatar">ST</div>
                    <span class="chat-name" id="speaker-name">Principal</span>
                </div>
                <div style="font-size: 0.65rem; color: var(--text-muted); font-weight: 800; opacity: 0.5;">LIVE COMMS</div>
            </div>
            <div class="chat-content">
                <div class="dialogue-text" id="dialogue-text"></div>
