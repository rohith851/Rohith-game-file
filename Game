    <script>
        const ChatUI = {
            isTyping: false,
            typingTimer: null,
            typeWriter(text, elementId, speed = 15) {
                if (this.typingTimer) clearInterval(this.typingTimer);
                this.isTyping = true;
                const element = document.getElementById(elementId);
                element.innerHTML = "";
                element.classList.add('typing-cursor');
                document.getElementById('options-container').style.display = 'none';
                
                let i = 0;
                this.typingTimer = setInterval(() => {
                    if (i < text.length) {
                        element.innerHTML += text.charAt(i);
                        i++;
                    } else {
                        clearInterval(this.typingTimer);
                        element.classList.remove('typing-cursor');
                        this.isTyping = false;
                        document.getElementById('options-container').style.display = 'block';
                    }
                }, speed);
            }
        };

        // --- WORLD SETUP ---
        const scene = new THREE.Scene();
        scene.background = new THREE.Color(0xf1f5f9);
        const camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 1000);
        camera.position.set(0, 15, 20);

        const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        document.getElementById('game-container').appendChild(renderer.domElement);

        scene.add(new THREE.HemisphereLight(0xffffff, 0x94a3b8, 1));
        const spotlight = new THREE.SpotLight(0xffffff, 0.8);
        spotlight.position.set(15, 40, 25);
        spotlight.castShadow = true;
        spotlight.shadow.mapSize.width = 4096;
        spotlight.shadow.mapSize.height = 4096;
        scene.add(spotlight);

        function createChar(color, x, z) {
            const g = new THREE.Group();
            const body = new THREE.Mesh(
                new THREE.CapsuleGeometry(0.4, 0.8), 
                new THREE.MeshStandardMaterial({ color, roughness: 0.1, metalness: 0.1 })
            );
            body.position.y = 0.8;
            body.castShadow = true;
            g.add(body);
            
            const head = new THREE.Mesh(
                new THREE.SphereGeometry(0.32), 
                new THREE.MeshStandardMaterial({ color: 0xffdbac })
            );
            head.position.y = 1.6;
            head.castShadow = true;
            g.add(head);
            
            g.position.set(x, 0, z);
            scene.add(g);
            return g;
        }

        const ground = new THREE.Mesh(
            new THREE.PlaneGeometry(300, 300), 
            new THREE.MeshStandardMaterial({ color: 0xffffff, roughness: 0.9 })
        );
        ground.rotation.x = -Math.PI/2;
        ground.receiveShadow = true;
        scene.add(ground);

        const grid = new THREE.GridHelper(100, 40, 0xe2e8f0, 0xf1f5f9);
        grid.position.y = 0.02;
        scene.add(grid);

        const player = createChar(0x4f46e5, 0, 5);
        const student = createChar(0x10b981, -8, -5); 
        const management = createChar(0xf43f5e, 8, -15);

        const Levels = [{
            studentMsg: "Leader garu! Canteen food quality chala worst ga undi. Students health kharab avthundi. Miru Management thoti matladi deeniki oka permanent solution vethakaali.",
            mgmtMsg: "Mr. Student Leader, our current catering contract is budget-friendly. Changing it now is logistically impossible. Why should we listen to these complaints?",
            choices: [
                { text: "Eeroju food sample test cheyiddham, results ni batti decision teesukundham sir. [1]", correct: true, feedback: "Evidence-based logic worked!" },
                { text: "Quality penchalsindhe, lekapothe memu strike ki veltham. [2]", correct: false, feedback: "Direct threats closed the doors for negotiation." }
            ]
        }];

        let state = { phase: 'start', sub: 'listen', score: 0, options: [] };
        const keys = {};

        window.addEventListener('keydown', e => {
            const k = e.key.toLowerCase();
            keys[k] = true;
            if (k === 'e') handleInteract();
            if (state.phase === 'dialogue' && !ChatUI.isTyping) {
                if (['1','2'].includes(k)) {
                    const idx = parseInt(k) - 1;
                    if (state.options[idx]) state.options[idx].action();
                }
            }
        });
        window.addEventListener('keyup', e => { keys[e.key.toLowerCase()] = false; });

        function handleInteract() {
            if (state.phase === 'dialogue') return;
            const target = state.sub === 'listen' ? student : management;
            if (player.position.distanceTo(target.position) < 4) startDialogue(target);
        }

        function startDialogue(target) {
            state.phase = 'dialogue';
            document.getElementById('dialogue-box').style.display = 'block';
            const lvl = Levels[0];
            
            if (target === student) {
                updateBox("Akhil (Student Rep)", "AK", lvl.studentMsg);
                renderOptions([{ text: "I'll handle this professionally. [1]", action: () => {
                    state.sub = 'report';
                    closeDialogue();
                }}]);
            } else {
                updateBox("College Admin", "ADM", lvl.mgmtMsg);
                renderOptions(lvl.choices.map((c, i) => ({ text: c.text, action: () => handleReply(c) })));
            }
        }

        function updateBox(name, avatar, text) {
            document.getElementById('speaker-name').innerText = name;
            document.getElementById('chat-avatar').innerText = avatar;
            ChatUI.typeWriter(text, 'dialogue-text');
        }

        function renderOptions(opts) {
            state.options = opts;
            const grid = document.getElementById('options-grid');
            grid.innerHTML = "";
            opts.forEach((o, i) => {
                const b = document.createElement('div');
                b.className = 'option-btn';
                b.innerHTML = `<span class="key-hint">${i+1}</span> ${o.text}`;
                b.onclick = o.action;
                grid.appendChild(b);
            });
        }

        function handleReply(choice) {
            if (choice.correct) {
                state.score += 500;
                document.getElementById('score-display').innerText = state.score + " XP";
                updateBox("Admin", "ADM", "Fair point. " + choice.feedback + " Let's conduct a joint inspection tomorrow.");
                renderOptions([{ text: "Challenge Complete. [1]", action: () => win() }]);
            } else {
                state.score -= 100;
                document.getElementById('score-display').innerText = state.score + " XP";
                updateBox("Admin", "ADM", "That's not how we do things here. " + choice.feedback);
                renderOptions([{ text: "Try another approach... [1]", action: () => startDialogue(management) }]);
            }
        }

        function closeDialogue() {
            state.phase = 'roaming';
            document.getElementById('dialogue-box').style.display = 'none';
        }

        function win() {
            closeDialogue();
            document.getElementById('overlay-screen').style.display = 'flex';
            document.getElementById('overlay-screen').innerHTML = `
                <div class="hero-card">
                    <div style="width: 80px; height: 80px; background: #ecfdf5; border-radius: 24px; display: flex; align-items: center; justify-content: center; margin-bottom: 32px;">
                        <i class="fas fa-check-circle" style="font-size: 2.5rem; color: #10b981;"></i>
                    </div>
                    <h2 style="font-size: 2.5rem; margin-bottom: 12px; font-weight: 800; letter-spacing: -0.04em;">Success</h2>
                    <p style="color: var(--text-muted); margin-bottom: 40px;">Issue resolved with logic and leadership.</p>
                    <button class="btn-primary" onclick="location.reload()">Next Campaign</button>
                    <div class="credit-footer" style="margin-top: 40px;">DESIGNED BY <b>@ROHITH-GUDIPUDI</b></div>
                </div>
            `;
        }

        function startGame() {
            document.getElementById('overlay-screen').style.display = 'none';
            state.phase = 'roaming';
        }

        function animate() {
            requestAnimationFrame(animate);
            if (state.phase === 'roaming') {
                if (keys.w) player.position.z -= 0.15;
                if (keys.s) player.position.z += 0.15;
                if (keys.a) player.position.x -= 0.15;
                if (keys.d) player.position.x += 0.15;
                
                const idealCamera = new THREE.Vector3(player.position.x, 12, player.position.z + 16);
                camera.position.lerp(idealCamera, 0.1);
                camera.lookAt(player.position.x, 0, player.position.z);

                const target = state.sub === 'listen' ? student : management;
                document.getElementById('interact-prompt').style.display = player.position.distanceTo(target.position) < 4 ? 'block' : 'none';
            }
            renderer.render(scene, camera);
        }
        animate();

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
    </script>
</body>
</html>
